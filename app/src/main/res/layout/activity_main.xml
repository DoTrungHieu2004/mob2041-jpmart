<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/jp_mart_background"
    tools:context=".screens.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/supermarket_background"
                android:contentDescription="@string/supermarket_bg" />

            <LinearLayout
                android:id="@+id/ln_thong_ke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/thong_ke_section"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:columnCount="3"
                    android:useDefaultMargins="true">

                    <LinearLayout
                        android:id="@+id/ln_doanh_thu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_doanh_thu"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:paddingStart="10dp"
                            android:src="@drawable/icon_revenue" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/doanh_thu"
                            android:textAlignment="center"
                            android:textColor="#2e3d3d"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_top_san_pham"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_top_san_pham"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:paddingStart="10dp"
                            android:src="@drawable/icon_top_products" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/top_san_pham"
                            android:textAlignment="center"
                            android:textColor="#2e3d3d"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_top_khach_hang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_top_khach_hang"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:paddingStart="10dp"
                            android:src="@drawable/icon_top_customers" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/top_san_pham"
                            android:textAlignment="center"
                            android:textColor="#2e3d3d"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_quan_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quan_ly_section"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:columnCount="3"
                    android:useDefaultMargins="true">

                    <LinearLayout
                        android:id="@+id/ln_san_pham"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_san_pham"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:paddingStart="10dp"
                            android:src="@drawable/icon_products" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/san_pham"
                            android:textAlignment="center"
                            android:textColor="#2e3d3d"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_khach_hang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_khach_hang"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:paddingStart="10dp"
                            android:src="@drawable/icon_customers" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/khach_hang"
                            android:textAlignment="center"
                            android:textColor="#2e3d3d"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_hoa_don"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_hoa_don"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:paddingStart="10dp"
                            android:src="@drawable/icon_cashbook" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hoa_don"
                            android:textAlignment="center"
                            android:textColor="#2e3d3d"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:columnCount="2"
                    android:useDefaultMargins="true">

                    <LinearLayout
                        android:id="@+id/ln_danh_muc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_danh_muc"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:paddingStart="10dp"
                            android:src="@drawable/icon_categories" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/danh_muc"
                            android:textAlignment="center"
                            android:textColor="#2e3d3d"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_nhan_vien"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_nhan_vien"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:paddingStart="10dp"
                            android:src="@drawable/icon_employees" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nhan_vien"
                            android:textAlignment="center"
                            android:textColor="#2e3d3d"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_nguoi_dung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nguoi_dung_section"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:columnCount="2"
                    android:useDefaultMargins="true">

                    <LinearLayout
                        android:id="@+id/ln_doi_mat_khau"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_doi_mat_khau"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:paddingStart="10dp"
                            android:src="@drawable/icon_password" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/doi_mat_khau"
                            android:textAlignment="center"
                            android:textColor="#2e3d3d"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_dang_xuat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_dang_xuat"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:paddingStart="10dp"
                            android:src="@drawable/icon_logout" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/dang_xuat"
                            android:textAlignment="center"
                            android:textColor="#2e3d3d"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>