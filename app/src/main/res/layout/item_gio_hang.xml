<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_products" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ten_san_pham_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ten_san_pham"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_gia_san_pham_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gia_san_pham"
                android:textColor="@color/light_gray"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_xoa_gio_hang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_delete_item"
                android:backgroundTint="@color/pink_red" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_down_gio_hang"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_down" />

                <TextView
                    android:id="@+id/tv_so_luong_gio_hang"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/background_cart_amount"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_up_gio_hang"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_up" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>