<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_employees" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ma_nhan_vien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ma_nhan_vien"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ten_nhan_vien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ten_nhan_vien"
                android:textColor="@color/pink_red" />

            <TextView
                android:id="@+id/tv_dia_chi_nhan_vien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dia_chi_nhan_vien"
                android:textColor="@color/pink_red" />

            <TextView
                android:id="@+id/tv_luong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/luong"
                android:textColor="@color/pink_red" />

            <TextView
                android:id="@+id/tv_chuc_vu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chuc_vu"
                android:textColor="@color/pink_red"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_sua_nhan_vien"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit_item"
                android:backgroundTint="@color/light_blue" />

            <ImageButton
                android:id="@+id/btn_xoa_nhan_vien"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete_item"
                android:backgroundTint="@color/pink_red" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>